#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int k;
	    cin>>k;
	    int count =0;
	    for(int i=0;i<k;i++){
	        if(i%2==0)
	        count+=3;
	        else
	        count-=1;
	        
	        } 
	        cout<<count<<endl;
	        
	}
}
	   
